// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  cards Card[]
  categories Category[]
}

model Card{
  id Int @id @default(autoincrement())
  categories Category[]   @relation(name: "categories")                  // many to many relationship
  title String
  details String
  done Boolean @default(false)
  ownerId Int?
  user User? @relation(fields: [ownerId], references: [id])        // one to many relationship
}

model Category{
  id Int @id @default(autoincrement())
  name String @unique
  cards Card[]   @relation(name: "categories") 
  ownerId Int?
  user User? @relation(fields: [ownerId], references: [id]) 
}